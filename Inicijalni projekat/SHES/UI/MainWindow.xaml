<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Sun power"></Label>
        <TextBox x:Name="txtSunPower"></TextBox>
        <Label Content="Charged"></Label>
        <TextBox x:Name="txtCharged"></TextBox>
        <Label Content="Is on charger"></Label>
        <CheckBox IsChecked="False" x:Name="chbIsOnCharger"></CheckBox>
        <Label Content="We want charging"></Label>
        <CheckBox IsChecked="False" x:Name="chbWeWantCharging"></CheckBox>
        <Button Content="Ok" Click="Button_Click"></Button>
    </StackPanel>
</Window>
